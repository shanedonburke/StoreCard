<Window
    x:Class="StoreCard.Windows.AddLinkWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:windows="clr-namespace:StoreCard.Windows"
    xmlns:userControls="clr-namespace:StoreCard.UserControls"
    mc:Ignorable="d"
    Width="600"
    Height="400"
    Background="{DynamicResource AppBackgroundColor_Brush}"
    WindowStartupLocation="CenterScreen"
    Closed="Window_Closed"
    Title="Add Link"
    d:DataContext="{d:DesignInstance Type=windows:AddLinkWindow, IsDesignTimeCreatable=False}">
    <Grid
        Margin="15,15,15,15"
        VerticalAlignment="Stretch">
        <userControls:LinkSelector
            Finished="LinkSelector_Finished"/>
    </Grid>
</Window>