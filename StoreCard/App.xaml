<Application
    x:Class="StoreCard.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    ShutdownMode="OnLastWindowClose"
    Startup="App_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="ResourceDictionaries/Fonts.xaml" />
                <ResourceDictionary
                    Source="ResourceDictionaries/Theme/Colors.xaml" />
                <ResourceDictionary
                    Source="ResourceDictionaries/Converters.xaml" />
                <ResourceDictionary
                    Source="ResourceDictionaries/Theme/DefaultControls/DefaultControls.xaml" />
                <ResourceDictionary
                    Source="ResourceDictionaries/Theme/CustomControls/CustomControls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>