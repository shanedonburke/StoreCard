<Application
    x:Class="StoreCard.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    ShutdownMode="OnLastWindowClose"
    Startup="App_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="ResourceDictionaries/Theme/Colors.xaml" />
                <ResourceDictionary
                    Source="ResourceDictionaries/VisibilityConverters.xaml" />
                <ResourceDictionary
                    Source="ResourceDictionaries/Theme/DefaultControls/CheckBox.xaml" />
                <ResourceDictionary
                    Source="ResourceDictionaries/Theme/DefaultControls/RadioButton.xaml" />
                <ResourceDictionary
                    Source="ResourceDictionaries/Theme/DefaultControls/ScrollBar.xaml" />
                <ResourceDictionary
                    Source="ResourceDictionaries/Theme/CustomControls/PrimaryButton.xaml" />
                <ResourceDictionary
                    Source="ResourceDictionaries/Theme/CustomControls/SecondaryButton.xaml" />
                <ResourceDictionary
                    Source="ResourceDictionaries/Theme/CustomControls/DeleteButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>