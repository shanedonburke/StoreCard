<Window x:Class="StoreCard.TaskbarIconWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:StoreCard"
        mc:Ignorable="d"
        ShowActivated="True"
        ShowInTaskbar="False"
        Width="0"
        Height="0"
        WindowStyle="None"
        Title="TaskbarIconWindow">
    <Window.Resources>
        <local:ShowMainWindowCommand x:Key="ShowMainWindowCommand" />
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Command="{StaticResource ShowMainWindowCommand}"
                    Gesture="CTRL+R" />
    </Window.InputBindings>
    <tb:TaskbarIcon x:Name="TaskbarIcon"
                    Visibility="Visible"
                    ToolTipText="Fallback ToolTip for Windows xp"
                    MenuActivation="LeftOrRightClick"
                    LeftClickCommand="{StaticResource ShowMainWindowCommand}"
                    PopupActivation="DoubleClick" />
</Window>
