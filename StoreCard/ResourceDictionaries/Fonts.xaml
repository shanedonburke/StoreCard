<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily
        x:Key="RobotoFont">/Fonts/#Roboto</FontFamily>
    <Style
        TargetType="{x:Type Window}">
        <Setter
            Property="FontFamily"
            Value="{StaticResource RobotoFont}" />
    </Style>
</ResourceDictionary>