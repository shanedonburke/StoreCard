<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        TargetType="Control"
        x:Key="FocusVisual">
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle
                        StrokeThickness="1"
                        Stroke="{DynamicResource AppForegroundBrush}"
                        StrokeDashArray="1 2"
                        SnapsToDevicePixels="True" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
