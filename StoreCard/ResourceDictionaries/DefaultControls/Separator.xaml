<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="{x:Type Separator}"
        TargetType="Separator">
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="Separator">
                    <Border
                        Height="1"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource SeparatorBrush}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>