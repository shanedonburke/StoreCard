<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:userControls="clr-namespace:StoreCard.UserControls">
    <Style
        x:Key="DeleteButton"
        TargetType="{x:Type userControls:StoreCardButton}">
        <Setter
            Property="BackgroundBrush"
            Value="{DynamicResource RedBrush}" />
        <Setter
            Property="HoverBackgroundBrush"
            Value="{DynamicResource RedBrush_Hover}" />
        <Setter
            Property="PressedBackgroundBrush"
            Value="{DynamicResource RedBrush_Pressed}" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource RedForegroundBrush}" />
    </Style>
</ResourceDictionary>
