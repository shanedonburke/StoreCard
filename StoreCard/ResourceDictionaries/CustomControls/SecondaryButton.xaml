<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:userControls="clr-namespace:StoreCard.UserControls">
    <Style x:Key="SecondaryButton" TargetType="{x:Type userControls:StoreCardButton}">
        <Setter Property="BackgroundBrush" Value="{DynamicResource LightBrush}" />
        <Setter Property="HoverBackgroundBrush" Value="{DynamicResource LightBrush_Hover}" />
        <Setter Property="PressedBackgroundBrush" Value="{DynamicResource LightBrush_Pressed}" />
        <Setter Property="Foreground" Value="{DynamicResource LightForegroundBrush}" />
    </Style>
</ResourceDictionary>
