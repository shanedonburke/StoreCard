<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:userControls="clr-namespace:StoreCard.UserControls">
    <Style
        x:Key="PrimaryButton"
        TargetType="{x:Type userControls:StoreCardButton}">
        <Setter
            Property="BackgroundBrush"
            Value="{DynamicResource PrimaryBrush}" />
        <Setter
            Property="HoverBackgroundBrush"
            Value="{DynamicResource PrimaryBrush_Hover}" />
        <Setter
            Property="PressedBackgroundBrush"
            Value="{DynamicResource PrimaryBrush_Pressed}" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource PrimaryForegroundBrush}" />
    </Style>
</ResourceDictionary>