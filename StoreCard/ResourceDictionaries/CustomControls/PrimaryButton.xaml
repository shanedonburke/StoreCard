<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:userControls="clr-namespace:StoreCard.UserControls">
    <Style
        x:Key="PrimaryButton"
        TargetType="{x:Type userControls:StoreCardButton}">
        <Setter
            Property="BackgroundBrush"
            Value="{StaticResource PrimaryColor_Brush}" />
        <Setter
            Property="HoverBackgroundBrush"
            Value="{DynamicResource PrimaryColor_Hover_Brush}" />
        <Setter
            Property="PressedBackgroundBrush"
            Value="{DynamicResource PrimaryColor_Pressed_Brush}" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource PrimaryForegroundColor_Brush}" />
    </Style>
</ResourceDictionary>